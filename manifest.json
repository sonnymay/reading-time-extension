{
    "manifest_version": 3,
    "name": "Reading Time Estimator",
    "version": "1.0",
    "description": "Estimates reading time for articles and web pages",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.svg"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}